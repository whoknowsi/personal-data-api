{
    "version": 2,
    "builds": [
        {
            "src": "index.js",
            "use": "@vercel/node"
        },
        {
            "src": "public/**",
            "use": "@vercel/static",
            "config": {
                "includeFiles": [
                    "public/**"
                ]
            }
        }
    ],
    "routes": [
        {
            "src": "/static/(.+)",
            "dest": "public/$1"
        },
        {
            "src": "/(.*)",
            "dest": "index.js"
        }
    ]
}